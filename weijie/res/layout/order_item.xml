<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="120dp"
              android:padding="5dp"
              android:background="#ffffff">
    <ImageView
            android:id="@+id/order_item_commodityImageView"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="4"
            android:src="@drawable/ic_launcher"
            android:padding="2dp">

    </ImageView>
    <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#ffffff">
        <TextView
                android:id="@+id/order_item_storeNameTextView"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="肯德基太白路店"
                android:textColor="#0000ff"
                android:textSize="18dp"
                >

        </TextView>
        <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="#000000"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/order_item_commodityNameView"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColor="#ffffff"
                    android:text="辣翅鸡腿堡"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    >
            </TextView>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:background="#fff000">
                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="数量: "
                        android:textSize="16dp"
                        />
                <TextView
                        android:id="@+id/order_item_commodityNumTextView"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="1">

                </TextView>


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#f0f0f0">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#fffff0"
                    android:layout_weight="2">
                <TextView
                        android:id="@+id/order_item_commodityItem1TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+香辣鸡翅">

                </TextView>
                <TextView
                        android:id="@+id/order_item_commodityItem2TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+百事可乐">

                </TextView>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="#ff00f0"
                    android:layout_gravity="bottom"
                    android:padding="2dp">
                <Button
                        android:id="@+id/order_item_remarkButton"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="2"
                        android:text="备注"
                        android:textSize="10dp"
                        >

                </Button>
                <Button
                        android:id="@+id/order_item_submitButton"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1.5"
                        android:text="确认购买"
                        android:textSize="10dp">

                </Button>
                <Button
                        android:id="@+id/order_item_cancelButton"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="2"
                        android:text="取消"
                        android:textSize="10dp">

                </Button>
            </LinearLayout>
        </LinearLayout>
        <TextView
                android:id="@+id/order_item_commodityMoneyTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="￥10"
                android:textSize="18dp"
                ></TextView>
    </LinearLayout>

</LinearLayout>